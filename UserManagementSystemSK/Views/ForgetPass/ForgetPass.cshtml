
@{
    ViewBag.Title = "ForgetPass";
}
<body>
    <div style="background-color:#D6E4E5;margin-top:17%;width:55%;height:90%;border-radius:10px;padding-top:50px;padding-bottom:50px;margin-left:20%">
        <center><h1 style="margin-top:auto%"> Reset Password</h1></center><br />
        <form class="mx-1 mx-md-4">
            <div class="d-flex flex-row align-items-center mb-4">
                <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                <div class="form-outline flex-fill mb-0">
                    <input style="width:50%;margin-left:25%" type="email" id="email" class="form-control" placeholder="Enter Email Address" /><br />
                </div>
            </div>

            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                <button type="button" onclick="ValidateEmail()" class="btn btn-primary btn-lg">Send Email</button>
            </div>
            <span id="lblError" style="color:red"></span>
            <script type="text/javascript">
                function ValidateEmail() {
                    var email = document.getElementById("email").value;
                    var lblError = document.getElementById("lblError");
                    lblError.innerHTML = " ";
                    var expr = /^([\w-\.]+)@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
                    if (!expr.test(email)) {
                        lblError.innerHTML = "Invalid email address";
                    }
                }
            </script>
        </form>
    </div>
</body>

